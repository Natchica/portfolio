{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Nathan's Portfolio - Monorepo",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && cargo watch -x run",
    "dev:frontend": "wait-on http://localhost:3000 && cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "build:backend": "cd backend && cargo build --release"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "keywords": ["portfolio", "rust", "react", "axum"],
  "author": "Nathan",
  "license": "MIT"
}
